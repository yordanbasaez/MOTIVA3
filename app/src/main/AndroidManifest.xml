<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Motiva3"
        tools:targetApi="31">
        <!-- Clave de API para Google Maps -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBby54cqARaHB_yU0S8e89nFqEca8kvPu0" />

        <!-- MainActivity: actividad principal de la app -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Motiva3">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AgregarTallerActivity: actividad adicional para agregar talleres -->


        <!-- EliminarTallerActivity: actividad adicional para eliminar talleres -->
        <activity
            android:name="com.tuapp.motiva3.pages.EliminarTallerActivity"
            android:exported="true"
            android:label="@string/eliminar_taller"
            android:theme="@style/Theme.Motiva3">
        </activity>


    </application>
</manifest>
